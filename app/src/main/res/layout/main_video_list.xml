<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main_video_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:gravity="right">

        <Button
            android:id="@+id/view_video_list"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/mov_btn"
            android:onClick="viewVideo" />

        <Button
            android:id="@+id/view_block_list"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:background="@drawable/list_btn"
            android:onClick="viewList" />

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>

