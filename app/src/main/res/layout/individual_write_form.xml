<?xml version="1.0" encoding="utf-8"?><!-- 개인의 구직글 작성 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#270089">

        <android.support.v7.widget.Toolbar
            android:id="@+id/concert_toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <!-- 수정해야함 위치 대충잡음 -->

            <TextView
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="구인글 작성"
                android:textColor="#ffffffff"
                android:textSize="15dp"
                android:textStyle="bold" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:background="#ffffffff"
            android:gravity="center"
            android:orientation="vertical">



            <ImageButton
                android:id="@+id/add_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="159dp"
                android:layout_marginRight="159dp"
                android:background="#ffffffff"
                android:padding="0sp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-9dp"
                android:layout_weight="0.8"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <!-- 이름 부분  -->
                <LinearLayout
                    android:id="@+id/name_linear"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ffffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/band_text"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="밴드명"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/gender_linear"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ffffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/team_text"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="팀 구성"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/first"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/second"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center" />

                    <EditText
                        android:id="@+id/third"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center" />

                    <EditText

                        android:id="@+id/fourthly"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/age_linear"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ffffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/age_Text"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="연령대"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:gravity="center" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/age_genre"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ffffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/genre_text"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="장르"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_genre"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:spinnerMode="dropdown"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/location_linear"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ffffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/location_Text"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="지역"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_si"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:spinnerMode="dropdown" />

                    <Spinner
                        android:id="@+id/spinner_gu"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:spinnerMode="dropdown" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/part_linear"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#ffffffff"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/part_Text"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="40dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:text="지원파트"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <Spinner
                        android:id="@+id/spinner_part"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:spinnerMode="dropdown" />

                </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 상세글쓰기 부분 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:layout_marginTop="18dp"
                android:layout_weight="0.1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="124dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    >

                <EditText
                    android:id="@+id/written"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:focusable="true"
                    android:focusableInTouchMode="true" />

            </LinearLayout>
            </LinearLayout>

            <!-- 아랫 버튼 부분 -->
            <LinearLayout
                android:id="@+id/down_linear"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="#270089"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btn_cancel"
                    android:layout_width="180dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp" />

                <ImageButton
                    android:id="@+id/btn_add"
                    android:layout_width="180dp"
                    android:layout_height="48dp"
                    android:layout_marginRight="16dp"
                    android:text="등록" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>





